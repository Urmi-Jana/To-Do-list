<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title>To DO</title>
    <link rel="stylesheet" href="css/styles.css">
  </head>
  <body>

    <div class = "box" id = "heading">
      <h1><%= listTitle %></h1>
    </div>
    
    <div class = "box">
      <% newItemArray.forEach(function(element) { %>
        <form action="/delete" method="post">
          <div class = item>
            <input type="checkbox" value = "<%= element._id %>" onChange = "this.form.submit()" name = "deletedItem">          
            <p><%= element.name %>  </p>
          </div>
          <input type="hidden" name="list" value="<%= listTitle %>">
        </form>
        
    <%}) %>
        
        
      
      <form action="/" method="post" class = "item">
        <input type="text" name="nextItem" placeholder="New Item" autocomplete="off">
        <button type="submit" name = "list" value = <%= listTitle %>  >+</button>
      </form>
    </div>     
  </body>
</html>
